<%= form_with(model: dummy_post) do |form| %>
<% if form.object.errors.any? %>
<% form.object.errors.full_messages.each do |message| %>
<div style="color: red">
<%= message%>
</div>
<%end%>
<% end %>
<div>
<%= form.label :title%>
<%= form.text_field :title%>
</div>
<div>
<%= form.label :body%>
<%= form.text_area :body%>
</div>
<%= form.submit%>
<% end %>